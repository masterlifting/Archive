@using Microsoft.Extensions.Localization;

<ErrorHandler 
    Message="@Localizer["Oops! Something went wrong. We are working on it."]"
    Icon="@Icons.Material.Sharp.Error"
    Color="Color.Error">
    @if (HostEnvironment.IsDevelopment())
    {
        <MudDivider Class="my-3" />

        <MudText Typo="Typo.body1">
            Type: @typeof(Exception).FullName
        </MudText>

        <MudDivider Class="my-1" />

        <MudText Typo="Typo.body1">
            Message: @Exception.Message
        </MudText>

        <MudDivider Class="my-1" />

        <MudText Typo="Typo.body1">
            Stack trace: @Exception.StackTrace
        </MudText>
    }
</ErrorHandler>

@code {
    [Parameter] public Exception Exception { get; set; } = new Exception("Unhandled Exception");

    [Inject] IStringLocalizer<App> Localizer { get; set; } = default!;
    [Inject] IHostEnvironment HostEnvironment { get; set; } = default!;
}