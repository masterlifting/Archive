<CascadingAuthenticationState>

    <Fluxor.Blazor.Web.StoreInitializer />

    <MudThemeProvider />
    <MudSnackbarProvider />
    <MudDialogProvider 
        Position="DialogPosition.Center"
        CloseOnEscapeKey="true" />

    <Router AppAssembly="@typeof(App).Assembly">

        <Found Context="routeData">

            <AuthorizeRouteView 
                Resource="@routeData"
                RouteData="@routeData"
                DefaultLayout="@typeof(MainLayout)">

                <NotAuthorized>
                    <MudContainer Class="mt-3" MaxWidth="MaxWidth.ExtraExtraLarge">
                        <MudText Typo="Typo.h5" Color="Color.Info">
                            @Localizer["You haven't got permission to reach this page."]
                        </MudText>
                    </MudContainer>
                </NotAuthorized>

                <Authorizing>
                    <MudContainer Class="mt-3" MaxWidth="MaxWidth.ExtraExtraLarge">
                        <MudText Typo="Typo.h5" Color="Color.Dark">
                            @Localizer["Authorization in progress..."]
                        </MudText>
                    </MudContainer>
                </Authorizing>

            </AuthorizeRouteView>

            <FocusOnNavigate 
                RouteData="@routeData"
                Selector="h1" />

        </Found>

        <NotFound>

            <PageTitle>Not found</PageTitle>

            <LayoutView Layout="@typeof(MainLayout)">
                <MudContainer Class="mt-3" MaxWidth="MaxWidth.ExtraExtraLarge">
                    <MudText Typo="Typo.h5" Color="Color.Info">
                            @Localizer["Sorry, there's nothing at this address."]
                        </MudText>
                </MudContainer>
            </LayoutView>

        </NotFound>

    </Router>

</CascadingAuthenticationState>
